@using Services.Models
@model UAIDesarrolloArquitectura.Models.ViewModel.BackupViewModel
<!DOCTYPE html>
<html lang="es">
@{
    ViewBag.Title = "Index";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>personal</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chivo:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
    

<body>
    <nav class="barra">
        @if (Services.SessionManager.IsLogged())
        {
            <div class="opciones">
                <a href="@Url.Action("Logout", "Home")">Cerrar Sesión</a>   
                @if (Services.SessionManager.GetInstance.User.Name == "admin")
                {
                    <a href="@Url.Action("Bitacora", "Bitacora")">Bitácora</a>
                }
                @if (Services.SessionManager.GetInstance.User.Name == "webmaster")
                {
                    <a href="@Url.Action("Backup", "Backup")">Respaldar Base de Datos</a>
                }
                <a href="@Url.Action("Carrito", "Carrito")">Carrito</a>
            </div>
            <p style='color:black'>Bienvenido, @Services.SessionManager.GetInstance.User.Name</p>
        }
        else
        {
            <a href="@Url.Action("Login", "Login")">Iniciar Sesión</a>
        }
    </nav>
    <header>
        <h1>Bersonal</h1>
    </header>
    <nav>
        <a class="active" href="/pages/contacto.html">Internet</a>
        <a href="https://es.euronews.com/noticias/internacional">Tienda</a>
        <a href="https://es.euronews.com/business">Portabilidad</a>
        <a href="@Url.Action("Plans", "Home")">Planes</a>
        <a href="https://es.euronews.com/green">TV</a>
    </nav>
    @if (Model != null && Model.BackupSuccess)
    {
        <script>
            alert("@Model.Message");
        </script>
    }
    <div class="container">
        <div class="container">
            <div id="descripcion">
                <h2>
                    Internet 100 MB + Flow Flex
                    62% OFF por 6 meses*
                    $15.089 final por mes
                </h2>
                <p><b>Internet 100 MB + Flow Flex</b></p>
                <p>
                    Por tener un servicio del hogar + una línea móvil de Personal,

                    podés duplicar gratis los gigas de tu plan móvil
                </p>
                <p>Por tener un servicio del hogar + una línea móvil de Personal</p>
                <p>
                    Hasta $2.500 pagando desde la app o hasta $2.850 por débito automático, dependiendo del nivel que
                    seas en Personal Pay
                </p>
            </div>
        </div>
        <div class="container">
            <!-- <img src="assets/images.jpg" alt="combo familiar">  NO ES RESPONSIVE POR AHORA-->
            <form>
                <br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Direccion de email" required> <br> <br>
                <label for="email">Nombre:</label>
                <input type="nombre" id="nombre" name="nombre" placeholder="Nombre" required>
                <br>
                <br>
                <input type="radio" id="option1" name="options" value="option1">
                <label for="option1">Opcion 1</label><br>

                <input type="radio" id="option2" name="options" value="option2">
                <label for="option2">Opcion 2</label><br>

                <input type="radio" id="option3" name="options" value="option3">
                <label for="option3">Opcion 3</label><br>
                <br>
                <button type="submit">Solicitar oferta</button>
            </form>
        </div>
    </div>
    <footer>
        Copyright © Personal 2024
    </footer>
</body>
</html>