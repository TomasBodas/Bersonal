@model List<Services.Models.User>
@{
    ViewBag.Title = "ABM";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bitacora</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chivo:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <style>
        .contenedor-tabla {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #ddd;
        }

        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }
        .btnRemover {
            padding: 10px;
            background-color: rgb(30, 100, 196);
            color: white;
            align-items: center;
            border-style: none;
        }

            .btnRemover:hover {
                background-color: rgb(34, 124, 222);
                cursor: pointer;
            }
    </style>
</head>
<body>
    <nav class="barra">
        @if (Services.SessionManager.IsLogged())
        {
            <div class="opciones">
                <a href="@Url.Action("Logout", "Home")">Cerrar Sesión</a>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
                @if (Services.SessionManager.GetInstance.User.Name == "admin")
                {
                    <a href="@Url.Action("Bitacora", "Bitacora")">Bitácora</a>
                    <a href="#">Gestión de usuarios</a>
                }
                @if (Services.SessionManager.GetInstance.User.Name == "webmaster")
                {
                    <a href="@Url.Action("Backup", "Backup")">Respaldar Base de Datos</a>
                }
                <a href="@Url.Action("Carrito", "Carrito")">Carrito</a>
            </div>
            <p style='color:black'>Bienvenido, @Services.SessionManager.GetInstance.User.Name</p>
        }
        else
        {
            <a href="@Url.Action("Login", "Login")">Iniciar Sesión</a>
        }
    </nav>
    <header>
        <h1>Bersonal</h1>
    </header>
    <nav>
        <a @Url.Action("Index", "Home")>Internet</a>
        <a href="https://es.euronews.com/noticias/internacional">Tienda</a>
        <a href="https://es.euronews.com/business">Portabilidad</a>
        <a href="@Url.Action("Plans", "Home")">Planes</a>
        <a href="https://es.euronews.com/green">TV</a>
    </nav>
    <button class="btnRemover">Crear Usuario</button>
    <br />
    <div class="contenedor-tabla">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.id</td>
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>@user.DNI</td>
                        <td>@user.Email</td>
                        <td>
                            <form action="@Url.Action("Borrar", "ABM")" method="post">
                                <input type="hidden" name="Id" value="@user.id" />
                                <button class="btnRemover" type="submit">Modificar</button>
                            </form>
                        </td>
                        <td>
                            <form action="@Url.Action("Borrar", "ABM")" method="post">
                                <input type="hidden" name="Id" value="@user.id" />
                                <button class="btnRemover" type="submit">Borrar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
